<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donor List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin: 5px 0;
            color: green;
        }

        a {
            text-decoration: none;
            color: #007bff;
            cursor: pointer;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div style="margin-bottom: 30px;">
        <h1 style="display: inline;">Announcements</h1>
        <a href="announcAdding" style="margin-left: 50px;">Add a new announcement</a>
    </div>
    
    <!-- <div id="search-container">
        <label for="search-input">Search:</label>
        <input type="text" id="search-input" placeholder="Enter donor name">
        <button onclick="search()">Go</button>
    </div> -->
    
    <% annoucements.forEach(innerArray => { %>
        <% innerArray.forEach(rowData => { %>
            <% if (rowData) { %>
                <p>
                    Staff id: <%= rowData.Sid %>,
                    Content: <%= rowData.text %>,
                    Status: <%= rowData.status %>
                </p>
            <% } else { %>
                <!-- Handle the case where rowData is undefined -->
                <p>Undefined RowDataPacket</p>
            <% } %>
        <% }); %>
    <% }); %>


    <script>
        function search() {
            // Implement search logic here
            alert('Searching...'); // Replace this with your search functionality
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin: 5px 0;
            color: green;
        }

        a {
            text-decoration: none;
            color: #007bff;
            cursor: pointer;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div style="margin-bottom: 30px;">
        <h1 style="display: inline;">Bloods</h1>
       
            
            <a href="bloodAdding" style="margin-left: 50px;">Add a new Blood</a>
      
           
           
     
    </div>
    
    <!-- <div id="search-container">
        <label for="search-input">Search:</label>
        <input type="text" id="search-input" placeholder="Enter donor name">
        <button onclick="search()">Go</button>
    </div> -->
    
    <% if (bloods && bloods.length > 0) { %>
        <% bloods.forEach(innerArray => { %>
            <% innerArray.forEach(blood => { %>
                <p>
                    Type: <%= blood.Type %>,
                    Blood Id: <%= blood.Bid %>,
                    Expiration Date: <%= blood.Expiration_date %>,
                    Blood Status: <%= blood.Bstatus %>
                </p>
            <% }); %>
        <% }); %>
    <% } else { %>
        <p></p>
    <% } %>

    
</body>
</html>

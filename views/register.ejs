<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <style>
        div {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin-top: 180px;
        }

        form {
            width: 300px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Welcome to BloodBank System</h1>
    <div>
        <form action="/submit" method="post" >
            <lable for="FnameInput">First Name</lable>
            <input type="text" id="FnameInput"  placeholder="First Name" name="Fname" required />
    
            <lable for="LnameInput">Last Name</lable>
            <input type="text" id="LnameInput"  placeholder="Last Name" name="Lname" required />

            <lable for="AddressInput">Address</lable>
            <input type="text" id="AddressInput"  placeholder="Address" name="address" required />

            <lable for="BirthInput">Birth Date</lable>
            <input type="date" id="BirthInput"  placeholder="" name="birthD" required />

            <lable for="WeightInput">Weight</lable>
            <input type="number" id="WeightInput"  placeholder="KG" name="weight" required />
    
            <lable for="UnameInput">Username</lable>
            <input type="text" id="UnameInput"  placeholder="Username" name="Uname" required />

            <lable for="passInput">Password</lable>
            <input type="password" id="passInput"  placeholder="password" name="passwordInput" required />
    
            <lable for="emailInput">Email</lable>
            <input type="email" id="emailInput"  placeholder="Luay@gmail.com" name="email" required />

            <lable for="PhoneInput">Phone</lable>
            <input type="tell" id="PhoneInput"  placeholder="966" name="phone"  />
    
            <lable for="genderInput">Gender</lable>
            <input type="text" id="genderInput"  placeholder="Gender" required name="gender" list="GenderList" />
            <datalist id="GenderList">
    
                <option value="Male"></option>
                <option value="Female"></option>
                
                
            </datalist>


            <lable for="typeInput">Register As: </lable>
            <input type="text" id="typeInput"  placeholder="type" required name="userType" list="TypeList" />
            <datalist id="TypeList">
    
                <option value="Donor"></option>
                <option value="Recipient"></option>
                
                
            </datalist>





            <label for="blood-type">Blood Type:</label>
            <select id="blood-type" name="bloodType" required>
                <option value="">Select Blood Type</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>
    
            
    
            <input type="submit" style="margin-top: 10px;"/>
            <input type="reset">
    
    
        </form>
    </div>
</body>
</html>
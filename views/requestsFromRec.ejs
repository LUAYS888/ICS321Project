    <h1>Pending Requests (Want Blood): </h1>
    <% if (reqResult && reqResult.length > 0) { %>
        <% reqResult.forEach(innerArray => { %>
            <% innerArray.forEach(data => { %>
                <% if (data.Rstatus === 'Pending') { %>
                    <p>
                       
                        Rid: <%= data.Rid %>,
                        Blood Type: <%= data.Blood_type %>,
                        Emergency: <%= data.emergency %>
                    </p>
                <% } %>
            <% }); %>
        <% }); %>
    <% } else { %>
        <p>No Requests.</p>
    <% } %>

    <h1>Completed Requests (Want Blood): </h1>
    <% if (reqResult && reqResult.length > 0) { %>
        <% reqResult.forEach(innerArray => { %>
            <% innerArray.forEach(data => { %>
                <% if (data.Rstatus === 'Completed') { %>
                    <p>
                       
                        Rid: <%= data.Rid %>,
                        Blood Type: <%= data.Blood_type %>,
                        Emergency: <%= data.emergency %>
                    </p>
                <% } %>
            <% }); %>
        <% }); %>
    <% } else { %>
        <p>No Requests.</p>
    <% } %>


    <h1>Rejected Requests (Want Blood): </h1>
    <% if (reqResult && reqResult.length > 0) { %>
        <% reqResult.forEach(innerArray => { %>
            <% innerArray.forEach(data => { %>
                <% if (data.Rstatus === 'Rejected') { %>
                    <p>
                       
                        Rid: <%= data.Rid %>,
                        Blood Type: <%= data.Blood_type %>,
                        Emergency: <%= data.emergency %>
                    </p>
                <% } %>
            <% }); %>
        <% }); %>
    <% } else { %>
        <p>No Requests.</p>
    <% } %>




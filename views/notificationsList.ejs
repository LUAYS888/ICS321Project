<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin: 5px 0;
            color: green;
        }

        a {
            text-decoration: none;
            color: #007bff;
            cursor: pointer;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div style="margin-bottom: 30px;">
        <h1 style="display: inline;">Notifications</h1>
        <a href="acceptProfileRequest" style="margin-left: 50px;">accept a request</a>
        <a href="rejectProfileRequest" style="margin-left: 50px;">reject a request</a>
    </div>
    
    <!-- <div id="search-container">
        <label for="search-input">Search:</label>
        <input type="text" id="search-input" placeholder="Enter donor name">
        <button onclick="search()">Go</button>
    </div> -->
    
    <% if (requests.length) { %>
        <% requests.forEach(innerArray => { %>
            <% innerArray.forEach(user => { %>
                <p>
                    Id: <%= user.Id %>,
                    Name: <%= user.name %>,
                    Username: <%= user.username %>,
                    Email: <%= user.email %>,
                    Gender: <%= user.gender %>,
                    Weight: <%= user.weight %>,
                    Blood Type: <%= user.blood_type %>,
                    UserType: <%= user.userType %>
                </p>
            <% }); %>
        <% }); %>
    
    <% } else { %>
        <!-- Code to execute if the condition is false -->
        <p>No Notifications.</p>
    <% } %>

    <script>
        function search() {
            // Implement search logic here
            alert('Searching...'); // Replace this with your search functionality
        }
    </script>
</body>
</html>
